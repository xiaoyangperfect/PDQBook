<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wehealth.pdqbook.fragment.WelcomeFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/welcome_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:id="@+id/welcome_pager_index_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/welcome_pager_index1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_selected_index" />

        <ImageView
            android:id="@+id/welcome_pager_index2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_circle_select_index" />

        <ImageView
            android:id="@+id/welcome_pager_index3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_circle_select_index" />
    </LinearLayout>

    <TextView
        android:id="@+id/welcome_enter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/enter_now_height"
        android:layout_alignParentBottom="true"
        android:background="@color/color_text_gray"
        android:gravity="center"
        android:text="@string/enter_now"
        android:textColor="@android:color/white"
        android:textSize="@dimen/main_page_title_size"
        android:visibility="gone" />

</RelativeLayout>
