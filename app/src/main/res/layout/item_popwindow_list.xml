<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="@dimen/item_search_result_inside_padding">

        <LinearLayout
            android:id="@+id/item_pop_list_title_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â– "
                android:layout_marginLeft="@dimen/item_top_padding"
                android:textColor="@color/color_blue" />

            <TextView
                android:id="@+id/item_pop_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_top_padding"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/item_search_result_title" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_pop_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:ellipsize="end"
            android:layout_margin="@dimen/item_top_padding"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/item_search_result_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/item_search_result_inside_padding"
            android:background="@color/color_light_gray_item_divider" />
</LinearLayout>